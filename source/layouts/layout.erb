<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title %></title>

    <%= stylesheet_link_tag "normalize", "bootstrap", "all" %>
    <%= javascript_include_tag  "jquery", "bootstrap", "all" %>
    <link href='https://fonts.googleapis.com/css?family=Roboto' rel='stylesheet' type='text/css'>
    <link rel="shortcut icon" href="/images/favicon.ico" type="image/x-icon">
    <link rel="icon" href="/images/favicon.ico" type="image/x-icon">
  </head>

  <body class="<%= page_classes %>">

      <nav class="navbar navbar-default navbar-fixed-top codi-navbar">

      <div class="container">
        <% link_to "/index.html", :class => 'navbar-brand' do %>
          <%= image_tag "logo.png", class: "site-logo" %>
          <h4>Cornell Open</h4>
          <h4>Data Initiative</h4>
        <% end %>
        <ul class="nav navbar-nav navbar-right quickFix">
          <li><%= link_to 'About', '/about.html', :class => 'codi-link'  %></li>
          <li><%= link_to 'Data', '/data.html', :class => 'codi-link'  %></li>
          <li><%= link_to 'Get Involved', '/involved.html', :class => 'codi-link'  %></li>
        </ul>
      </div>
    </nav>

    <%= yield %>

    <footer>
      <div class="container">
      <%= link_to 'Home', '/index.html', :class => 'visible-link'  %>
      <%= link_to 'About', '/about.html', :class => 'visible-link'  %>
      <%= link_to 'Data', '/data.html', :class => 'visible-link'  %>
      <%= link_to 'Get Involved', '/involved.html', :class => 'visible-link'  %>
      <%= link_to 'GitHub', 'https://github.com/cornell-data', :class => 'visible-link'  %>
      <br>
      <h6>&copy; 2021 Cornell Open Data Initiative<h6>
      </div>
    </footer>
  </body>
</html>
